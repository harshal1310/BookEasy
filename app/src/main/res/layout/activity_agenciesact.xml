<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transitionGroup="true"
    android:windowSoftInputMode="stateVisible|adjustPan"
    tools:context=".Signup">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/imgView_icon_signupforaggency"
          android:layout_width="240dp"
          android:layout_height="120dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:padding="4dp"
          android:src="@drawable/worker"
          android:transitionName="trans1" />

      <EditText
          android:id="@+id/AgencyName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/transparent"
          android:drawablePadding="12dp"
          android:ems="12"
          android:inputType="text"
          android:hint=" Agency Name"
          android:maxLines="1"
          android:padding="8dp" />

      <EditText
          android:id="@+id/Agencynumber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/transparent"
          android:drawablePadding="12dp"
          android:ems="10"
          android:inputType="number"
          android:hint="Agency verification Number"
          android:maxLines="1"
          android:padding="8dp" />



      <EditText
          android:id="@+id/agencymail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/transparent"
          android:drawablePadding="12dp"
          android:ems="10"
          android:hint="Email Id"
          android:inputType="textEmailAddress"
          android:maxLines="1"
          android:padding="8dp" />

      <EditText
          android:id="@+id/agencypass"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/transparent"
          android:drawablePadding="12dp"
          android:ems="10"
          android:hint="Password"
          android:inputType="textPassword"
          android:maxLines="1"
          android:padding="8dp" />

      <EditText
          android:id="@+id/agencyConfirmPassword"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/transparent"
          android:drawablePadding="12dp"
          android:ems="10"
          android:hint="Confirm Password"
          android:inputType="textPassword"
          android:maxLines="1"
          android:padding="8dp" />

      <Spinner
          android:id="@+id/statespinnerforagency"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginTop="10dp"
          android:entries="@array/states"
          android:spinnerMode="dropdown" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:text="Select City"
          android:textSize="18dp" />

      <Spinner
          android:id="@+id/agencyspinner"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginTop="10dp"
          android:scrollbarSize="20dp" />

      <EditText
          android:id="@+id/editTextPincodeforagency"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/transparent"
          android:drawablePadding="12dp"
          android:ems="10"
          android:hint="PIN Code"
          android:inputType="number"
          android:maxLines="1"
          android:padding="8dp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawablePadding="12dp"
            android:padding="8dp"
            android:text="+91-"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/agencyContact_No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Contact No."
            android:inputType="phone"
            android:maxLines="1"
            android:padding="8dp" />

      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawablePadding="12dp"
            android:padding="8dp"
            android:text="+91-"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/agencyAlternate_No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint=" Alternate Contact No."
            android:inputType="phone"
            android:maxLines="1"
            android:padding="8dp" />

      </LinearLayout>

      <Button
          android:id="@+id/button_nextagency"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:backgroundTint="#FFA726"
          android:onClick="test"
          android:text="Signup" />

    </LinearLayout>

  </ScrollView>
</LinearLayout>